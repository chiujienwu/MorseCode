<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MorseCode.MainPage">

    <StackLayout>
        <!--<Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>-->
        <Label Text="Morse Code App" FontSize="Title" Padding="30,10,30,10"/>

        <Label x:Name="Output_Letters: " Text="Output Letter" FontSize="Medium"/>
        <Label x:Name="Output_Morse: " Text="Output Morse" FontSize="Medium"/>

        <Button Text="." x:Name="Input_Dot" Clicked="But_Dot"/>
        <Button Text="-" x:Name="Input_Dash" Clicked="But_Dash"/>
        <Button Text="space" x:Name="Input_Space" Clicked="But_Space"/>

    </StackLayout>

</ContentPage>
